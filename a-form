    <button id="playButton">Nyalakan Lagu</button>

    <script>
        const lines = document.querySelectorAll('.line');
        let currentLine = 0;
        let intervalId;

        function showNextLine() {
            if (currentLine < lines.length) {
                lines[currentLine].classList.add('visible');
                currentLine++;
            } else {
                clearInterval(intervalId); // Stop when all lines are shown
            }
        }

        // Audio control
        const audio = document.getElementById('myAudio');
        const playButton = document.getElementById('playButton');

        playButton.addEventListener('click', function() {
            if (audio.paused) {
                audio.play();
                playButton.textContent = 'Hentikan Lagu';
                intervalId = setInterval(showNextLine, 3000); // Tampilkan setiap 3 detik
            } else {
                audio.pause();
                playButton.textContent = 'Nyalakan Lagu';
                clearInterval(intervalId); // Stop showing lyrics
            }
       
